<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 角色DAO接口Mapping映射 -->
<mapper namespace="cn.yichen.bootwebmybatis.security.dao.IRoleDao">
	<!-- 启用此映射的全局缓存 -->
	<cache />

	<insert id="create" keyProperty="no" keyColumn="RNO" useGeneratedKeys="true" flushCache="true">
		insert into roles (RNAME) values (#{name})
	</insert>

	<update id="update" flushCache="true">
		update roles set RNAME=#{name} where RNO=#{no}
	</update>

	<delete id="delete" flushCache="true">
		delete from roles where RNO=#{no}
	</delete>

	<select id="selectListByAll" resultType="Role">
		select RNO no, RNAME name from roles
	</select>

	<select id="selectRoleByNo" resultType="Role">
		select RNO no, RNAME name from roles
		where RNO=#{no}
	</select>


</mapper>